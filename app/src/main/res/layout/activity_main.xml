<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/allTheme"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:text="TOSS TIME!"
        android:textAllCaps="true"
        android:textColor="#64dd17"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Batting First?"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:gravity="center_vertical|right"
            />

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <RadioButton
            android:id="@+id/aradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="CSK"
            android:textColor="#ffd600"/>

        <RadioButton
            android:id="@+id/bradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="MI"
            android:textColor="#1565c0"/>
    </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/allTheme"
                android:gravity="center"
                android:padding="4dp"
                android:text="CSK"
                android:textColor="#ffd600"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffd600"
                android:textSize="56sp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <Button
                        style="@style/allTheme"
                        android:onClick="addOneForTeamA"
                        android:text="SINGLE"
                        android:layout_weight="1"
                        />

                    <Button
                        style="@style/allTheme"
                        android:onClick="addTwoForTeamA"
                        android:text="DOUBLE"
                        android:layout_weight="1"/>

                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <Button
                        android:onClick="addThreeForTeamA"
                        android:text="3 RUNS"
                        style="@style/allTheme"
                        android:layout_weight="1"
                        />

                    <Button
                        android:onClick="addFourForTeamA"
                        android:text="FOUR"
                        style="@style/allTheme"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <Button
                        android:onClick="addSixForTeamA"
                        android:text="SIX"
                        style="@style/allTheme"
                        android:layout_weight="1"/>

                    <Button
                        android:onClick="addWicketForTeamA"
                        android:text="WICKET"
                        style="@style/allTheme"
                        android:layout_weight="1"/>

                </TableRow>

            </TableLayout>

            <Button
                style="@style/allTheme"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:onClick="endTeamA"
                android:text="end batting"
                android:textSize="16sp"/>


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/allTheme"
                android:gravity="center"
                android:padding="4dp"
                android:text="MI"
                android:textColor="#1976d2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="0"
                android:textColor="#1976d2"
                android:textSize="56sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <Button
                        style="@style/allTheme"
                        android:onClick="addOneForTeamB"
                        android:text="SINGLE"
                        android:layout_weight="1"/>

                    <Button
                        style="@style/allTheme"
                        android:onClick="addTwoForTeamB"
                        android:text="DOUBLE"
                        android:layout_weight="1"/>
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <Button
                        android:onClick="addThreeForTeamB"
                        android:text="3 RUNS"
                        style="@style/allTheme"
                        android:layout_weight="1"/>

                    <Button
                        android:onClick="addFourForTeamB"
                        android:text="FOUR"
                        style="@style/allTheme"
                        android:layout_weight="1"/>
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <Button
                        android:onClick="addSixForTeamB"
                        android:text="SIX"
                        style="@style/allTheme"
                        android:layout_weight="1"/>

                    <Button
                        android:onClick="addWicketForTeamB"
                        android:text="WICKET"
                        style="@style/allTheme"
                        android:layout_weight="1"/>

                </TableRow>
            </TableLayout>

            <Button
                style="@style/allTheme"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:onClick="endTeamB"
                android:text="end batting"
                android:textSize="16sp"/>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:text="New Match"
        android:layout_margin="2dp"
        android:onClick="reset"
        />


</LinearLayout>